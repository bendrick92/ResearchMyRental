<!DOCTYPE html>

<html>
    <head>
        <link href="@Url.Content("~/Content/Styles.css")" rel="stylesheet" type="text/css" />
        <link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css" />
        <script src="@Url.Content("~/Scripts/jquery-1.10.2.js")" type="text/javascript"></script>
        <script src="@Url.Content("~/Scripts/popupManager.js")" type="text/javascript"></script>
        <link href="@Url.Content("http://fonts.googleapis.com/css?family=Hammersmith+One")" rel="stylesheet" type="text/css">
        <meta name="viewport" content="width=device-width" />
        <title>@ViewBag.Title</title>
    </head>
    <body>
        <div class="wrapper">
            <div class="header">
                <div class="logo">
                    <img src="~/Content/rmrlogo.png" alt="RMR" style="height: 100%; display: block; margin: 0 auto;" />
                </div>
                <div class="title">
                    Research My Rental
                </div>
                <div class="welcome">
                    Welcome back @Session["Username"].ToString()!
                    <br />
                    <br />
                    @Html.ActionLink("Logout", "Logout", "Base", null, new { @class = "welcomeButton" })
                </div>
            </div>
            <div class="nav">
                <div class="nav_content">
                    <ul>
                        <li><a href="~/Home" target="_self">Home</a></li>
                        <li><a href="~/Reviews" target="_self">Reviews</a></li>
                        <li><a href="~/Resources" target="_self">Resources</a></li>
                    </ul>
                </div>
            </div>
            <div class="main">
                @RenderBody()
            </div>
            @if (TempData["popupMessage"] != null)
            {
                @Html.Partial("_popupMessage")
            }
            <div class="push"></div>
        </div>
        <div class="footer">
            &copy; ResearchMyRental 2014
        </div>
    </body>
</html>
